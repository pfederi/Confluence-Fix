{
  "manifest_version": 2,
  "name": "Confluence Cursor Fix",
  "version": "1.0.0",
  "description": "Fixes the cursor jump bug in Confluence edit mode",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16-gray.png",
      "48": "icons/icon48-gray.png",
      "128": "icons/icon128-gray.png"
    },
    "default_title": "Confluence Cursor Fix"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "*://*/*",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "confluence-cursor-fix@patrick-federi.com",
      "strict_min_version": "57.0"
    }
  }
}

