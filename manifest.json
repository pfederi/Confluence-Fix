{
  "manifest_version": 3,
  "name": "Confluence Cursor Fix",
  "version": "1.0.2",
  "description": "Fixes the cursor jump bug in Confluence edit mode",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16-gray.png",
      "48": "icons/icon48-gray.png",
      "128": "icons/icon128-gray.png"
    },
    "default_title": "Confluence Cursor Fix"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}

